{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "RDS Multi-Az Mysql Creation",
  "Resources": {
     "PrivateDBSubnetGroup": {
        "Type": "AWS::RDS::DBSubnetGroup",
        "Properties": {
          "DBSubnetGroupDescription": "Private DB Subnet Group",
          "SubnetIds": [
            {
              "Fn::ImportValue": {
                "Fn::Sub": "PrivateSubnetID1a"
              }
            },
            {
              "Fn::ImportValue": {
                "Fn::Sub": "PrivateSubnetID1b"
              }
            }
          ]
        }
      },

      "DBInstance": {
	"DependsOn": "PrivateDBSubnetGroup",
        "Type": "AWS::RDS::DBInstance",
        "Properties": {
          "Engine": "MySQL",
          "MultiAZ": "false",
          #"MultiAZ": "true",
          "DBInstanceClass": "db.t2.micro",
          "DBName": "{{ rdsdb }}",
 	  "StorageType": "gp2",
          "AllocatedStorage": "20",
          "MasterUsername": "{{ rdsuser }}",
          "MasterUserPassword": "{{ rdspass }}",
          "DBSubnetGroupName" : { "Ref" : "PrivateDBSubnetGroup" },
          "VPCSecurityGroups": [
            {
  		"Fn::ImportValue": {
                "Fn::Sub": "PrivateSGID"
              }

            }
          ],
          "Tags": [
            {
              "Key": "Name",
              "Value": "MyBB-Database"
            }
          ]
        }
      }
#      "WaitHandle": {
#        "Type": "AWS::CloudFormation::WaitConditionHandle"
#      },
#      "WaitCondition": {
#        "Type": "AWS::CloudFormation::WaitCondition",
#        "DependsOn": "DBInstance",
#        "Properties": {
#          "Handle": {
#            "Ref": "WaitHandle"
#          },
#          "Timeout": "300"
#        }
#      }
    
    },
  "Outputs": {
      "RdsEndpoint": {
        "Value": {
                "Fn::GetAtt": [
                  "DBInstance",
                  "Endpoint.Address"
                ]
        },
        "Description": "RDS MySQL Endpoint"
      }
   }
  
}

