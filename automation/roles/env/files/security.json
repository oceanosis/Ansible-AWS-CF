{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Public Security Assignments",
  "Resources": {
    "PrivateSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "Private",
        "GroupDescription": "Private",
        "SecurityGroupIngress" : [ 
        {
         "IpProtocol" : "tcp",
         "FromPort" : "0",
         "ToPort" : "65535",
         "CidrIp" : "10.0.0.0/16"
        }
        ],
	"VpcId": {"Fn::ImportValue" : {"Fn::Sub" : "VpcId"}},
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Name",
            "Value": "PrivateSG"
          }
        ]
      }
    },
    "PublicNACL": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
"VpcId": {"Fn::ImportValue" : {"Fn::Sub" : "VpcId"}},
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Name",
            "Value": "PublicNACL"
          }
        ]
      }
    },
    "PrivateNACL": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
"VpcId": {"Fn::ImportValue" : {"Fn::Sub" : "VpcId"}},
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Name",
            "Value": "PrivateNACL"
          }
        ]
      }
    },
  "PublicNACLAssociation1a": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
"SubnetId": {"Fn::ImportValue" : {"Fn::Sub" : "PublicSubnetID1a"}},
        "NetworkAclId": {
          "Ref": "PublicNACL"
        }
      }
    },
    "PublicNACLAssociation1b": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
"SubnetId": {"Fn::ImportValue" : {"Fn::Sub" : "PublicSubnetID1b"}},
        "NetworkAclId": {
          "Ref": "PublicNACL"
        }
      }
    },

    "PrivateNACLAssociation1a": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
"SubnetId": {"Fn::ImportValue" : {"Fn::Sub" : "PrivateSubnetID1a"}},
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        }
      }
    },
    "PrivateNACLAssociation1b": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
"SubnetId": {"Fn::ImportValue" : {"Fn::Sub" : "PrivateSubnetID1b"}},
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        }
      }
    },
    "PrivateNACLRule1": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        },
        "CidrBlock": "10.0.0.0/16",
        "PortRange": {
          "From": "0",
          "To": "65535"
        },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 10
      }
    },
    "PrivateNACLRule2": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        },
        "CidrBlock": "10.0.0.0/16",
        "PortRange": {
          "From": "0",
          "To": "65535"
        },
        "Egress" : "true",
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 10
      }
    },

    "PublicNACLRule1": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "22",
          "To": "22"
        },
	"Icmp" : { "Code" : "-1", "Type" : "-1" },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 10
      }
    },
    "PublicNACLRule2": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "22",
          "To": "22"
        },
	"Egress" : "true",
        "Icmp" : { "Code" : "-1", "Type" : "-1" },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 10
      }
    },
    "PublicNACLRule5": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "1024",
          "To": "65535"
        },
        "Icmp" : { "Code" : "-1", "Type" : "-1" },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 30
      }
    },
    "PublicNACLRule6": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "1024",
          "To": "65535"
        },
        "Egress" : "true",
        "Icmp" : { "Code" : "-1", "Type" : "-1" },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 30
      }
    },

    "PublicNACLRule3": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "Icmp" : { "Code" : "-1", "Type" : "-1" },
        "PortRange": {
          "From": "80",
          "To": "80"
        },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 20
      }
    },

    "PublicNACLRule4": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
	"Icmp" : { "Code" : "-1", "Type" : "-1" },
	"Egress" : "true",
        "PortRange": {
          "From": "80",
          "To": "80"
        },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 20
      }
    },

    "PublicNACLRule7": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "Icmp" : { "Code" : "-1", "Type" : "-1" },
        "PortRange": {
          "From": "443",
          "To": "443"
        },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 40
      }
    },

    "PublicNACLRule8": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "CidrBlock": "0.0.0.0/0",
        "Icmp" : { "Code" : "-1", "Type" : "-1" },
        "Egress" : "true",
        "PortRange": {
          "From": "443",
          "To": "443"
        },
        "Protocol": "6",
        "RuleAction": "Allow",
        "RuleNumber": 40
      }
    }


  },
  "Outputs" : {
  "PrivateSecurityGroup" : {
    "Description" : "The security group ID to use for private servers",
    "Value" :  { "Fn::GetAtt" : ["PrivateSecurityGroup", "GroupId"] },
    "Export" : { "Name" : {"Fn::Sub": "PrivateSGID" }}
  }

}
}
